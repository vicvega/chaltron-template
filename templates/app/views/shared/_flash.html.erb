<turbo-frame id='flash'>
  <%= tag.div class: 'flash-container',
              data: {
                controller: 'chaltron--remove',
                action: 'click->chaltron--remove#remove'
              } do %>
    <% %i[error alert notice success].each do |m| %>
      <%= flash_message(flash[m], m) unless flash[m].nil? %>
    <% end %>
  <% end %>
</turbo-frame>

<%= simple_form_for resource, as: resource_name, url: session_path(resource_name) do |f| %>
  <%= f.input :login, placeholder: t('.login_placeholder') %>
  <%= f.input :password, placeholder: 'Password' %>
  <% if devise_mapping.rememberable? %>
  <div class="row mb-3">
    <div class="col-sm-9 offset-sm-3">
      <%= f.input :remember_me, as: :boolean, label: t('.remember_me') %>
    </div>
  </div>
  <% end %>

  <div class='row mb-3'>
    <div class='col-sm-9 offset-sm-3'>
      <%= f.submit t('.submit_text'), class: 'btn btn-primary' %>
    </div>
  </div>
  <hr>
  <p>
    <strong><%= link_to t('.link_text'), new_password_path(resource_name) %> </strong>
  </p>
<% end %>

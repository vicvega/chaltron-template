<%= form_tag(session_path(resource_name), role: 'form') do %>
  <div class='form-floating'>
    <%= text_field_tag 'user[login]', nil,
                       { class: 'form-control', placeholder: 'Login' } %>
    <%= label_tag 'username', t('.login_placeholder') %>
  </div>
  <div class='form-floating mb-3'>
    <%= password_field_tag 'user[password]', nil, { class: 'form-control bottom', placeholder: 'Password' } %>
    <%= label_tag 'password', 'Password' %>
  </div>
  <% if devise_mapping.rememberable? %>
    <div class='checkbox mb-3'>
      <input name='user[remember_me]' value='0' type='hidden'>
      <input class='form-check-input' type='checkbox' name='user[remember_me]' id='user_remember_me' value='1'>
      <label class='form-check-label' for='gridCheck1'>
        Ricordami
      </label>
    </div>
  <% end %>
  <%= submit_tag t('.submit_text'), class: 'btn btn-primary w-100' %>
  <hr>
  <p>
    <strong><%= link_to t('.link_text'), new_password_path(resource_name) %> </strong>
  </p>
<% end %>
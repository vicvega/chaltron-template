<div class='container-fluid'>
  <div class='row'>
      <div class='col'>
        <h3><%= t('.title') %></h3>

        <%= simple_form_for current_user, as: :chaltron_user,
                                          url: chaltron_self_user_update_path do |f| %>
          <%= f.error_notification %>
          <%= f.input :fullname %>
          <%= f.input :email, disabled: current_user.provider.present? %>
          <%= f.input :avatar, as: :file, input_html: { accept: 'image/png image/jpeg image/gif image/bmp image/tiff'} %>

          <%= f.submit t('.submit'), class: 'btn btn-primary' %>
          <%= link_to chaltron_self_user_show_path, class: 'btn btn-link pull-right' do %>
            <%= icon :fas, :times, t('chaltron.common.cancel') %>
          <% end %>
      <% end %>
    </div>
  </div>
</div>

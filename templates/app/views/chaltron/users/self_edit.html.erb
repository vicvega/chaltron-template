<div class='container-fluid'>
  <div class='row'>
      <div class='col'>
        <h3><%= t('.title') %></h3>

        <%= simple_form_for current_user, as: :chaltron_user, url: self_update_chaltron_users_path do |f| %>
          <%= f.error_notification %>
          <%= f.input :fullname %>
          <% if current_user.provider.nil? %>
          <%= f.input :email %>
            <fieldset>
              <legend>Password</legend>
              <%= f.input :password %>
              <%= f.input :password_confirmation %>
            </fieldset>
          <% else %>
            <%= f.input :email, disabled: true %>
          <% end %>

          <div class='row mb-3'>
            <div class='col-sm-9 offset-sm-3'>
              <%= f.submit t('.submit'), class: 'btn btn-primary' %>
              <%= link_to self_show_chaltron_users_path, class: 'btn btn-link pull-right' do %>
                <%= icon :fas, :times, t('chaltron.common.cancel') %>
              <% end %>
            </div>
          </div>
      <% end %>
    </div>
  </div>
</div>
